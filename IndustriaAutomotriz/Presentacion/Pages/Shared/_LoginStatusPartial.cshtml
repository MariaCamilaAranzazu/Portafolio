@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Account/Logout">
        Bienvenido @User.Identity.Name
        <button type="submit" class="texto">salir</button>
    </form>
}
else
{
    <a class="nav-link text-light" asp-page="/Account/Login">Ingresar</a>
}

<style>
    .texto{
        background: royalblue;
        color:#f8f9fa;
        border: none;
    }
</style>